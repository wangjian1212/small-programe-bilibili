.main{
  padding: 5rpx;
  color: #666;
}
/* 视频详情 */
.video-info{
  margin-top: 10rpx;
}
.video-info video{
  width: 100%;
}
.video-title{
  font-size: 35rpx;
  display: flex;
  justify-content: space-between;
}
.video-detail{
  font-size: 28rpx;
  margin-top: 5rpx;
}
.video-detail text{
  margin-left: 15rpx;
}
.video-detail .author{
  color:black;
}
/* 视频推荐 */
.other-list{
  margin-top: 10rpx;
}
.other-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.other-img-warp{
  width:38%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other-img-warp image{
  border-radius: 15rpx;
  width: 90%;
}
.other-info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.other-title{
  font-size: 30rpx;
  color: #e06f93;
}
.other-detail{
  font-size: 24rpx;
}

/* 评论列表 */
.comment-warp{
  margin-top: 10rpx;
}
.comment-title{
  font-size: 30rpx;
  padding: 10rpx;
}
.comment-list{}
.comment-item{
  margin-bottom: 20rpx;
  border-bottom: 1px solid #666;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.comment-user{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment-user image{
  width: 60%;
  border-radius: 15%;
}
.comment-info{
  flex: 5;
  flex-direction: column;
  justify-content: space-around;
}
.comment-detail{
  display: flex;
  justify-content: space-between;
}
.comment-detail .author{
  font-size: 28rpx;
  color: #000;
}
.comment-detail .date{
  color: #666;
  font-size: 24rpx;
}
.comment-content{
  font-size: 26rpx;
  color: #000;
}